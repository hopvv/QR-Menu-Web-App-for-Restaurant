FROM node:24-bullseye

# Set the working directory
WORKDIR /usr/src/app

# Copy package.json and package-lock.json from build context (server/)
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application code from the server build context
COPY . .

# Expose the port the app runs on (server listens on 5000 in docker-compose)
EXPOSE 5000

# Command to run the application using the package.json start script (ts-node)
CMD ["npm", "run", "start"]